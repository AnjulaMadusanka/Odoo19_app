<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- ========== Tree View (List View) ==========-->
    <record id="view_student_list" model="ir.ui.view">
        <field name="name">student.management.tree</field>
        <field name="model">student.management</field>
        <field name="arch" type="xml">
            <list string="Students" decoration-muted="active==False" default_order="name asc">
                <field name="name"/>
                <field name="email"/>
                <field name="phone"/>
                <field name="date_enrolled"/>
                <field name="active" column_invisible="1"/>
            </list>
        </field>
    </record>

    <!-- ========== Form View (with Print Buttons) ==========-->
    <record id="view_student_form" model="ir.ui.view">
        <field name="name">student.management.form</field>
        <field name="model">student.management</field>
        <field name="arch" type="xml">
            <form string="Student">
                <!-- Add header buttons for reports -->
                <header>
                    <button name="%(action_report_student)d"
                            string="Print Report"
                            type="action"
                            class="btn-primary"/>
                </header>
                <sheet>
                    <group>
                        <group string="Basic Info">
                            <field name="name" placeholder="e.g. John Doe"/>
                            <field name="email" placeholder="john@example.com"/>
                            <field name="phone" placeholder="+1 234 567 8900"/>
                            <field name="date_enrolled"/>
                            <field name="active"/>
                        </group>
                        <group string="Notes">
                            <field name="notes" nolabel="1" placeholder="Any notes..."/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- ========== Kanban View ==========-->
    <record id="view_student_kanban" model="ir.ui.view">
        <field name="name">student.management.kanban</field>
        <field name="model">student.management</field>
        <field name="arch" type="xml">
            <kanban string="Students" default_group_by="date_enrolled">
                <field name="name"/>
                <field name="email"/>
                <field name="date_enrolled"/>
                <field name="active"/>
                <templates>
                    <t t-name="card">
                        <div class="oe_kanban_global_click">
                            <div class="o_kanban_record_title"><field name="name"/></div>
                            <div class="o_kanban_record_subtitle"><field name="email"/></div>
                            <div class="o_kanban_record_bottom">
                                <field name="date_enrolled"/>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- ========== Search View ==========-->
    <record id="view_student_search" model="ir.ui.view">
        <field name="name">student.management.search</field>
        <field name="model">student.management</field>
        <field name="arch" type="xml">
            <search>
                <field name="name" string="Student Name"/>
                <field name="email"/>
                <filter name="filter_active" string="Active" domain="[('active', '=', True)]"/>
                <filter name="filter_archived" string="Archived" domain="[('active', '=', False)]"/>
                <separator/>
                <filter name="filter_my_students" string="My Students" domain="[('create_uid', '=', uid)]"/>
            </search>
        </field>
    </record>

    <!-- Action: opens Students with Tree, Kanban, and Form available -->
    <record id="action_student_list" model="ir.actions.act_window">
        <field name="name">Students</field>
        <field name="res_model">student.management</field>
        <field name="view_mode">list,kanban,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first student!
            </p>
            <p>
                Click the "New" button to add a student. Fill in the name and any other details.
            </p>
        </field>
    </record>

    <!-- Root menu: "Student Management" in the main Apps menu -->
    <menuitem id="menu_student_root"
              name="Student Management"
              sequence="50"/>

    <!-- Submenu: "Students" opens the list of students -->
    <menuitem id="menu_student_list"
              name="Students"
              parent="menu_student_root"
              action="action_student_list"
              sequence="10"/>

</odoo>

